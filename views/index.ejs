        <!-- Embed -->
        <meta content="Logs Analyzer" property="og:title"/>
        <meta content="Ce site analyse les fichiers de logs Apache2 (access.log) pour extraire des statistiques comme le nombre total de requÃªtes, les codes de statut HTTP, les mÃ©thodes utilisÃ©es, les IPs les plus actives et les erreurs dÃ©tectÃ©es." property="og:description"/>
        <meta content="https://logs-analyzer.jonathan-gp.fr/" property="og:url"/>
        <meta content="https://logs-analyzer.jonathan-gp.fr/images/apache2.png" property="og:image"/>
        <meta content="#d63031" data-react-helmet="true" name="theme-color"/>

        <link rel="stylesheet" href="./css/style.css">
        <link rel="stylesheet" href="./css/index.css">
